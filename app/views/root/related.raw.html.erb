<% if artefact && artefact.present? %>

<!-- related -->
<div class="related-positioning">
  <div class="related-container">

    <div class="related">
      <div class="inner group">
        <% if artefact.section && artefact.section != "" %>
              <% section, subsection = artefact.section.split(':', 2) %>
              <h2>More in <a href="/browse/<%= h(section.parameterize) %>"
                ><span><%= h(section) %></span></a></h2>
              
            <% end %>
        <!--h2>Similar content</h2-->
        <nav role="navigation">
          <ul>
            <% if artefact.related_items.size > 0 %>
              <% (artefact.related_items || []).each do |item| %>
                <% if item.artefact %>
                <li class="<%= h(item.artefact.kind) %>">
                  <a href="/<%= h(item.artefact.slug) %>"><%= h(item.artefact.name) %></a>
                </li>
                <% end %>
              <% end %>
            <% end %>
            <li class="related-topic"><a href="/browse/<%= h(section.parameterize) %>"
                ><span>Lost?</span> Try all sections</a></li>
            <% if artefact.section && artefact.section != "" %>
              <% section, subsection = artefact.section.split(':', 2) %>
              <!--li class="related-topic"><a href="/browse/<%= h(section.parameterize) %>"
                >More from the <span><%= h(section) %></span> section</a></li-->
            <% end %>
          </ul>
        </nav>
     </div>
   </div>

  </div>
</div>
<!-- end related -->
<% end %>
